{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fresha/api/shared/abstract": ["libs/api/shared/abstract/src/index.ts"],
      "@fresha/api/shared/common": ["libs/api/shared/common/src/index.ts"],
      "@fresha/api/shared/decorator": ["libs/api/shared/decorator/src/index.ts"],
      "@fresha/api/shared/exception": ["libs/api/shared/exception/src/index.ts"],
      "@fresha/api/shared/filter": ["libs/api/shared/filter/src/index.ts"],
      "@fresha/api/shared/validation": ["libs/api/shared/validation/src/index.ts"],
      "@fresha/api/user": ["libs/api/user/src/index.ts"],
      "@fresha/shared/data-access/model": ["libs/shared/data-access/model/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
